<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="43dp"
                android:centerColor="#53000000"
                android:endColor="#00000000"
                android:startColor="#000000"  />
        </shape>
    </item>
    <item
        android:top="10dp"
        android:left="10dp"
        android:right="10dp"
        android:bottom="10dp">
        <shape
            android:shape="oval">
            <solid android:color="@color/highlight" />
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>
</layer-list>
